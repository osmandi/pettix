                         <%= image_tag pet.image.url %>
                        <% end %>
                    </figure>
                    <div class="item__data">
                        <h3 class="item__data--name"><%= pet.name %></h3>
                        <img src="" alt=""><p class="item__data--location"><%= pet.ciudad %></p>
                    </div>
                </div>
            <div>
            <% end %>
        </section>
        
